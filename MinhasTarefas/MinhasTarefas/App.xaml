<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasTarefas.App">
	<Application.Resources>

        <ResourceDictionary>
            
            <Color x:Key="labelNome">Snow</Color>

            <Font x:Key="labelFonte">Large</Font>

            <Style x:Key="labelTimePicker" TargetType="Label">
                <Setter Property="Font" Value="Large" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Margin" Value="7, 10" />
            </Style>

            <Style x:Key="fundo" TargetType="StackLayout">
                <Setter Property="BackgroundColor" Value="#F5F5F5" />
            </Style>

            <Style x:Key="backgroundGrey" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#F5F5F5" />
            </Style>

            <!-- Add Task -->
            <Style x:Key="stackHorizontal" TargetType="StackLayout">
                <Setter Property="Margin" Value="3" />
            </Style>
            
            <Style x:Key="labelDay" TargetType="Label">
                <Setter Property="Font" Value="Large" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>